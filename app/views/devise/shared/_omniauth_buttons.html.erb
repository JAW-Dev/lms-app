<% if @omniauth_enabled %>
  <div class="flex flex-col items-center">
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "#{local_assigns[:registration] ? 'Sign Up' : 'Log In'} with #{omniauth_provider_name(provider)}", omniauth_authorize_url(resource_name, provider), method: :post, class: "w-full mb-5 px-6 py-3 text-center is-highlighted" %>
    <% end -%>
    <div class="w-full flex items-center mb-5">
      <div class="border-grey border-t flex-grow"></div>
      <div class="mx-3">OR</div>
      <div class="border-grey border-t flex-grow"></div>
    </div>
  </div>
<% end -%>