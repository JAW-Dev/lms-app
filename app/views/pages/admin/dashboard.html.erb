<div class="bg-grey-lighter">
  <div class="container lg:mb-12 px-8 md:pl-16 md:pr-8">
    <div class="py-12 lg:py-16">
      <div class="max-w-lg">
        <h1 class="text-4xl lg:text-5xl text-grey-darker font-extrabold leading-tight">Admin Dashboard</h1>
      </div>
    </div>
  </div>
</div>

<div class="container flex flex-wrap pb-20 md:px-8">
  <div class="p-4 w-full md:w-1/2 xl:w-1/3 hidden">
    <%= link_to admin_curriculum_reports_path, class: "card" do %>
      <div class="flex items-center">
        <div class="px-1 py-2 text-grey text-lg">
          <i class="fas fa-analytics"></i>
        </div>
        <h2 class="font-bold text-grey-darker text-lg mx-2">View Reports</h2>
      </div>
      <p class="text-grey-dark">View reporting on sales and user engagement</p>
    <% end %>
  </div>

  <% if can? :manage, Curriculum::Course %>
    <div class="p-4 w-full md:w-1/2 xl:w-1/3">
      <%= link_to admin_curriculum_courses_path, class: "card" do %>
        <div class="flex items-center">
          <div class="px-1 py-2 text-grey text-lg">
            <i class="fas fa-graduation-cap"></i>
          </div>
          <h2 class="font-bold text-grey-darker text-lg mx-2">Manage Modules</h2>
        </div>
        <p class="text-grey-dark">Add, update, or remove modules and behavior bundles</p>
      <% end %>
    </div>
  <% end %>

  <% if can? :manage, Curriculum::Behavior %>
    <div class="p-4 w-full md:w-1/2 xl:w-1/3">
      <%= link_to admin_curriculum_behaviors_path, class: "card" do %>
        <div class="flex items-center">
          <div class="px-1 py-2 text-grey text-lg">
            <i class="fas fa-video"></i>
          </div>
          <h2 class="font-bold text-grey-darker text-lg mx-2">Manage Behaviors</h2>
        </div>
        <p class="text-grey-dark">Add, update, or remove behavior videos</p>
      <% end %>
    </div>
  <% end %>

  <% if can? :manage, Curriculum::Webinar %>
    <div class="p-4 w-full md:w-1/2 xl:w-1/3">
      <%= link_to admin_curriculum_webinars_path, class: "card" do %>
        <div class="flex items-center">
          <div class="px-1 py-2 text-grey text-lg">
            <i class="fas fa-users-class"></i>
          </div>
          <h2 class="font-bold text-grey-darker text-lg mx-2">Manage Webinars</h2>
        </div>
        <p class="text-grey-dark">Add, update, or remove webinars</p>
      <% end %>
    </div>
  <% end %>

  <% if can? :read, Order %>
    <div class="p-4 w-full md:w-1/2 xl:w-1/3">
      <%= link_to admin_curriculum_orders_path, class: "card" do %>
        <div class="flex items-center">
          <div class="px-1 py-2 text-grey text-lg">
            <i class="fas fa-box-usd"></i>
          </div>
          <h2 class="font-bold text-grey-darker text-lg mx-2">View Orders</h2>
        </div>
        <p class="text-grey-dark">View completed orders and gifts</p>
      <% end %>
    </div>
  <% end %>

  <% if can? :manage, User %>
    <div class="p-4 w-full md:w-1/2 xl:w-1/3">
      <%= link_to admin_users_path, class: "card" do %>
        <div class="flex items-center">
          <div class="px-1 py-2 text-grey text-lg">
            <i class="fas fa-user-friends"></i>
          </div>
          <h2 class="font-bold text-grey-darker text-lg mx-2">Manage Users</h2>
        </div>
        <p class="text-grey-dark">Add, update, or remove users and assign their access level</p>
      <% end %>
    </div>
  <% end %>
</div>
