<% title 'Log in via Email' %>

<div class="bg-grey-lightest h-full">
  <div class="container mb-10 lg:mb-12 sm:px-8 md:pl-16 md:pr-8">
    <div class="sm:py-12">
      <div class="bg-white mx-auto mb-4 shadow-md md:w-3/4 xl:w-1/2">

        <%= form_for(@magic_link, html: { method: :post, class: "p-8" }) do |f| %>
          <h1 class="mb-4 text-2xl text-brown font-bold">Log in via Email</h1>
          <p class="mb-4">Enter your email address below to receive a one-time login link.</p>

          <div class="mb-4">
            <%= f.label :email, class: "block mb-1 text-sm font-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, autofocus: true, class: "w-full p-2 bg-grey-lighter shadow-inner" %>
          </div>

          <div class="actions">
            <%= f.button "Send link", type: "submit", class: "w-full md:w-auto mb-4 md:mb-0 px-6 py-3 text-center is-highlighted" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
