<% title 'Support' %>

<div class="bg-grey-lighter">
  <div class="container mb-10 px-8 md:pl-16 md:pr-8">
    <div class="py-12 lg:py-16">
      <div class="max-w-lg">
        <h1 class="text-4xl lg:text-5xl text-grey-darker font-extrabold leading-tight">Support</h1>
      </div>
    </div>
  </div>
</div>

<div class="container px-8 md:pr-8 lg:pl-16">
  <div class="pt-12 pb-16">
    <div class="flex flex-col xl:flex-row xl:-mx-8 pt-4 pb-8">
      <div class="flex flex-col w-full xl:w-1/3 mb-10 xl:mb-0 xl:mx-8">
        <h2 class="text-xl mb-4 font-bold text-grey-darkest">Not sure where to start?</h2>
        <div class="flex-grow">
          <p class="mb-4 text-grey-darkest">Check out our <%= link_to "Course Navigation", curriculum_course_navigation_path %> for some quick suggestions on how to progress through the modules.</p>
        </div>
        <%= link_to "Learn More", curriculum_course_navigation_path, class: "w-full md:w-auto btn btn--primary-gradient" %>
      </div>

      <% if can?(:create, Order) && !current_user.has_full_access? %>
        <div class="flex flex-col w-full xl:w-1/3 mb-10 xl:mb-0 xl:mx-8">
          <h2 class="text-xl mb-4 font-bold text-grey-darkest">Ready for full access?</h2>
          <div class="flex-grow">
            <p class="mb-4 text-grey-darkest">You've gone through the <%= link_to "introductory modules", curriculum_course_path('admired-leadership-introduction') %> and now you're ready to start your Admired Leadership<sup>&reg;</sup> journey.</p>
          </div>
          <%= link_to "Get Full Access", user_signed_in? ? new_curriculum_order_path : new_user_access_path(user_type: :me), class: "w-full md:w-auto btn btn--primary-gradient" %>
        </div>
      <% end %>

      <div class="flex flex-col w-full xl:w-1/3 mb-10 xl:mb-0 xl:mx-8">
        <h2 class="text-xl mb-4 font-bold text-grey-darkest">Other questions or comments?</h2>
        <div class="flex-grow">
          <p class="mb-4 text-grey-darkest">Feel free to reach out to us with any other quesions or concerns. We'll get back to you right away.</p>
        </div>
        <%= link_to "Contact Us", contact_path, class: "w-full md:w-auto btn btn--primary-gradient" %>
      </div>
    </div>
  </div>
</div>
