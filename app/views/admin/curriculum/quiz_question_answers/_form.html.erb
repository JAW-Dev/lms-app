<div class="container px-8 md:pr-8 lg:pl-16">
  <div class="pt-12 pb-16">
    <%= form_with(model: [:admin, curriculum_quiz_question_answer], local: true, class: "lg:max-w-3/4") do |form| %>
      <% if curriculum_quiz_question_answer.errors.any? %>
        <div id="error_explanation" class="px-8 py-4 mb-8 bg-red-dark">
          <p class="mb-2 text-xl font-bold text-white leading-tight">Something went wrong. Please correct the following errors and try again:</p>
          <ul class="text-white">
            <% curriculum_quiz_question_answer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= form.label :status, "Correct answer?", class: "block mb-1 font-bold" %>
        <%= form.select :status, Curriculum::QuizQuestionAnswer.statuses.keys.map{ |status| [status.humanize, status] } %>
      </div>

      <div class="mb-6">
        <%= form.label :content, class: "block mb-1 font-bold" %>
        <%= form.text_area :content, class: "w-full p-2 bg-grey-lighter shadow-inner", rows: 2 %>
      </div>

      <div class="flex flex-col md:flex-row items-center md:-mx-2">
        <%= form.button "Update Answer", type: "submit", class: "w-full md:w-auto mb-6 md:mx-2 md:mb-0 btn btn--lg btn--primary rounded" %>
        <%= link_to "Cancel", edit_admin_curriculum_quiz_question_path(curriculum_quiz_question_answer.quiz_question), class: "md:mx-2" %>
      </div>
    <% end %>
  </div>
</div>
