<div class="container px-8 md:pr-8 lg:pl-16">
  <div class="pt-12 pb-16">
    <%= form_with(model: curriculum_example, local: true, url: curriculum_example.new_record? ? admin_curriculum_behavior_examples_path(@behavior) : admin_curriculum_example_path, class: "lg:max-w-3/4") do |form| %>
      <% if curriculum_example.errors.any? %>
        <div id="error_explanation" class="px-8 py-4 mb-8 bg-red-dark">
          <p class="mb-2 text-xl font-bold text-white leading-tight">Something went wrong. Please correct the following errors and try again:</p>
          <ul class="text-white">
            <% curriculum_example.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="mb-6">
        <%= form.label :description, class: "block mb-1 font-bold" %>
        <%= form.text_area :description, class: "w-full p-2 bg-grey-lighter shadow-inner", rows: 6 %>
      </div>

      <hr class="border-t pb-4">

      <div class="flex flex-col md:flex-row items-center md:-mx-2">
        <%= form.button nil, type: "submit", class: "w-full md:w-auto mb-6 md:mx-2 md:mb-0 btn btn--lg btn--primary rounded" %>
        <%= link_to "Cancel", admin_curriculum_behavior_examples_path(behavior_id: curriculum_example.behavior.id), class: "md:mx-2" %>
      </div>
    <% end %>
  </div>
</div>
