<% title @event.title %>

<article class="single-event">
  <div class="bg-grey-lighter md:flex">
    <div class="container px-8 lg:pl-24 <%= @event.image ? 'lg:pr-8' : 'lg:pr-24' %>">
      <div class="py-12 pb-16 mx-auto">
        <h1 class="text-4xl lg:text-5xl text-grey-darker font-extrabold leading-tight"><%= @event.title %></h1>
        <div class="text-lg text-purple font-bold"><%= @event.display_date || @event.date %></div>
      </div>
    </div>
    <% if @event.image %>
      <div class="md:w-1/3 flex-no-shrink">
        <%= image_tag(@event.image, class: "h-full object-cover mb-6 md:mb-0 align-middle") %>
      </div>
    <% end %>
  </div>

  <div class="container px-8 lg:px-24">
    <div class="pt-12 pb-16 mx-auto">
      <%= raw @event.content %>
    </div>
  </div>

  <div class="bg-grey-lighter">
    <div class="container px-8 lg:px-24">
      <div class="pt-16 pb-16 mx-auto">
        <div class="event-form">
          <%= raw @event.form %>
        </div>
      </div>
    </div>
  </div>
</article>
